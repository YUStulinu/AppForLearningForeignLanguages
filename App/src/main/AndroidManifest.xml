<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Dark"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Material3.Dark.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".account.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Material3.Dark.NoActionBar">

        </activity>

        <activity
            android:name=".account.CreateAccountActivity"
            android:theme="@style/Theme.Material3.Dark.NoActionBar" />

        <activity
            android:name=".LanguageSelectionActivity"
            android:theme="@style/Theme.Material3.Dark.NoActionBar" />

        <!--English-->
        <activity
            android:name=".Tests.english.TestSelectionActivityEnglish"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.english.TestSpeakingActivityEnglish"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.english.TestWritingActivityEnglish"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.english.TestCorrectAnswerActivityEnglish"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <!--French-->
        <activity
            android:name=".Tests.french.TestSelectionActivityFrench"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.french.TestSpeakingActivityFrench"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.french.TestWritingActivityFrench"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.french.TestCorrectAnswerActivityFrench"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <!--German-->

        <activity
            android:name=".Tests.german.TestSelectionActivityGerman"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.german.TestSpeakingActivityGerman"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.german.TestWritingActivityGerman"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <activity
            android:name=".Tests.german.TestCorrectAnswerActivityGerman"
            android:theme="@style/Theme.Material3.Dark.NoActionBar"/>

        <service android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />


</manifest>