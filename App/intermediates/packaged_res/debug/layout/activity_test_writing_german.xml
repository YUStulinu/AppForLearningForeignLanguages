<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tests.german.TestWritingActivityGerman">

    <TextView
        android:id="@+id/satz_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/satz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/antwort_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/antwort"
        android:layout_below="@id/satz_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/korrekte_antwort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/korrekte_antwort"
        android:layout_below="@id/antwort_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/falsche_antwort_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/falsche_antwort"
        android:layout_below="@id/korrekte_antwort_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

</RelativeLayout>
